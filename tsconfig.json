{
  "compilerOptions": {
    "jsx": "react-jsx",
    // "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "module": "ESNext",
    "target": "ES2017",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src", "experimental"],
  "exclude": ["node_modules", "experimental", "src/components"]
}
