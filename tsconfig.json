{
  "compilerOptions": {
    "jsx": "react-jsx",
    // "rootDir": ".",
    "outDir": "dist",
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": true,
    "paths": {
      "@/*": ["./*"],
      "@/s/*": ["./src/*"],
      "@/components/*": ["./src/components/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
